  "bugs": {
    "url": "https://github.com/des1ro/party_app/issues"
  },
  "homepage": "https://github.com/des1ro/party_app#readme",
  "dependencies": {
    "@prisma/client": "^4.4.0",
    "awilix": "^7.0.3",
    "concurrently": "^7.4.0",
    "cors": "^2.8.5",
    "esbuild": "^0.15.11",
    "express": "^4.18.1",
    "express-async-errors": "^3.1.1",
    "helmet": "^6.0.0",
    "pino-pretty": "^9.1.1",
    "wait-on": "^6.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/node": "^18.8.3",
    "nodemon": "^2.0.20",
    "prisma": "^4.4.0",
    "ts-node": "^10.9.1",
    "tslint": "^6.1.3",
    "typescript": "^4.8.4"
  }
}
